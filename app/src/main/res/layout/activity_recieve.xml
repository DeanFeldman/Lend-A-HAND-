<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Recieve">

    <ScrollView
        android:id="@+id/receiver_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".Recieve">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="32dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/colorBackground"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/lah_logo"
                        android:contentDescription="Logo" />
                </LinearLayout>
                <TextView
                    android:id="@+id/receiver_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Items"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnBackground"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get the help you need"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnBackground"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/colorBackground"
                android:elevation="6dp"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Item Needed"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinner_needed_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Quantity Needed"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/input_needed_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter quantity needed"
                    android:inputType="number"
                    android:textColor="@color/colorOnBackground"
                    android:textColorHint="@color/colorOnSurface"
                    android:background="@drawable/edittext_background"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/button_add_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Request"
                    android:textColor="@color/colorOnPrimary"
                    android:backgroundTint="@color/colorPrimaryVariant"
                    android:padding="14dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="3dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorOnSurface"
                    android:layout_marginBottom="24dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="38dp"
        android:text="&lt;"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="1dp"
        android:textColor="@color/colorOnPrimary"
        android:backgroundTint="@color/colorSecondary"/>

</FrameLayout>