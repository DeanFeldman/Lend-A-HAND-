<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Recieve">


    <ScrollView
        android:id="@+id/receiver_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/receiverContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">


            <TextView
                android:id="@+id/receiver_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Items"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Item Needed"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <Spinner
                android:id="@+id/spinner_needed_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Quantity Needed"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/input_needed_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter quantity needed"
                android:inputType="number"
                android:layout_marginBottom="24dp" />


            <Button
                android:id="@+id/button_add_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Request"
                android:backgroundTint="#2979FF"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottom_button_bar_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#EEEEEE">

        <Button
            android:id="@+id/button_donate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Donate" />

        <Button
            android:id="@+id/button_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />

        <Button
            android:id="@+id/button_donorwall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Donor Wall" />

    </LinearLayout>

</LinearLayout>
